{
  "name": "stylelint-config-amp",
  "version": "0.5.0",
  "description": "stylelint config to enforce Accelerated Mobile Pages CSS restrictions",
  "main": "index.js",
  "engines": {
    "node": ">=6"
  },
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/stylelint-config-amp.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "postcss",
    "amp",
    "mobile",
    "accelerated-mobile-pages",
    "validator",
    "Accelerated Mobile Pages",
    "AMP HTML",
    "validate",
    "amphtml"
  ],
  "author": "tinovyatkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinovyatkin/stylelint-config-amp/issues"
  },
  "homepage": "https://github.com/tinovyatkin/stylelint-config-amp#readme",
  "peerDependencies": {
    "stylelint": "^8.4.0 || ^10.0.0"
  },
  "scripts": {
    "release": "npmpub",
    "test": "jest && eslint *.js --ignore-path .gitignore && remark . --quiet --frail"
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-stylelint": "8.3.0",
    "jest": "22.2.1",
    "npmpub": "3.1.0",
    "remark-cli": "5.0.0",
    "remark-preset-lint-consistent": "2.0.1",
    "remark-preset-lint-recommended": "3.0.1",
    "stylelint": "10.0.1"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "env": {
      "jest": true
    }
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  }
}
