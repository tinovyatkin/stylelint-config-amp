{
  "name": "stylelint-config-amp",
  "version": "2.0.0",
  "description": "stylelint config to enforce Accelerated Mobile Pages CSS restrictions",
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/stylelint-config-amp.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "postcss",
    "amp",
    "mobile",
    "accelerated-mobile-pages",
    "validator",
    "Accelerated Mobile Pages",
    "AMP HTML",
    "validate",
    "amphtml"
  ],
  "author": "tinovyatkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinovyatkin/stylelint-config-amp/issues"
  },
  "homepage": "https://github.com/tinovyatkin/stylelint-config-amp#readme",
  "peerDependencies": {
    "stylelint": "^10.0.0"
  },
  "scripts": {
    "lint": "eslint *.js --ignore-path .gitignore",
    "test": "jest && eslint *.js --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "eslint": "6.3.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "stylelint": "10.1.0"
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:node/recommended"
    ],
    "env": {
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "script"
    }
  }
}
